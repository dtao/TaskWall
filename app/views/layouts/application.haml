%head
  %title Unfuddle Metrics
  = stylesheet_link_tag "generic"
  = stylesheet_link_tag "application"
  = javascript_include_tag "/javascripts/jquery-1.7.2"
  = javascript_include_tag "/underscore/underscore.min"
  = javascript_include_tag "/javascripts/highcharts-2.2.5"
  = javascript_include_tag "/javascripts/application"
  = yield_content :javascripts

%body
  #navmenu
    %ul
      - if logged_in?
        %li
          %a(href="/tickets/by_week") Tickets by Week
      - else
        %li
          %a(href="/auth/google_oauth2") Log in

  #content
    = yield

  - if flash[:notice]
    #flash= flash[:notice]

  / Load this image in the background.
  %img(src="/images/loading.gif" style="display: none;")
