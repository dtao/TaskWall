- content_for :javascripts do
  = javascript_include_tag "tickets_by_week"

%input.tickets-search(placeholder="Search to highlight certain tickets")

.status-selectors
  .label Show:
  - @statuses.each do |status|
    .status-selector.selected
      .icon
      %span.value= status

%table.tickets-closed-by-week
  %tr.header-row
    %th.week-column Week
    - @users.each do |user|
      %th.tickets-column= user.name

  - @tickets.each do |week, tickets_for_week|
    %tr.content-row
      %th.week-column= week
      - @users.each do |user|
        %td.tickets-column
          .tickets
            - (tickets_for_week[user.id] || []).each do |ticket|
              = render_partial :"tickets/ticket_card", :locals => { :ticket => ticket }
