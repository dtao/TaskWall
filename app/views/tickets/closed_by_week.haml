- content_for :javascripts do
  = javascript_include_tag "tickets_closed_by_week"

%input.tickets-search(placeholder="Search for specific tickets")

%table.tickets-closed-by-week
  %tr.header-row
    %th.week-column Week
    - @users.each do |user|
      %th.tickets-column= user.name

  - @tickets.each do |week, tickets_for_week|
    %tr.content-row
      %th.week-column= week
      - @users.each do |user|
        %td.tickets-column
          .tickets
            - (tickets_for_week[user.name] || []).each do |ticket|
              = render_partial :"tickets/ticket", :locals => { :ticket => ticket }
